<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/exploreFragment">

    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.mydreamtrip.ui.explore.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore" />

    <action
        android:id="@+id/action_exploreFragment_to_postDetailsFragment"
        app:destination="@id/postDetailsFragment" />


    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.mydreamtrip.AddFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mydreamtrip.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.example.mydreamtrip.PostDetailsFragment"
        android:label="PostDetails">

        <argument
            android:name="postId"
            app:argType="string" />

        <argument
            android:name="title"
            app:argType="string" />

        <argument
            android:name="location"
            app:argType="string" />

        <argument
            android:name="ratingText"
            app:argType="string" />

        <argument
            android:name="author"
            app:argType="string" />

        <argument
            android:name="imageRes"
            app:argType="integer" />

    </fragment>

</navigation>
