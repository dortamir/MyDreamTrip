<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MdtPrimaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="cornerRadius">@dimen/corner_16</item>
        <item name="backgroundTint">@color/mdt_primary</item>
        <item name="android:textColor">@color/mdt_on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MdtCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_16</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="strokeColor">@color/mdt_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="MdtImageTopRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_16</item>
        <item name="cornerSizeTopRight">@dimen/corner_16</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="MdtCircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
