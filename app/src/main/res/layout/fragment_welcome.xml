<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdt_bg"
    android:padding="@dimen/space_24">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoCard"
        style="@style/MdtCard"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/mdt_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgAppLogo"
            android:layout_width="96dp"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/logo_mydreamtrip" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Dream Trip"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/mdt_text_primary"
        android:layout_marginTop="@dimen/space_20"
        app:layout_constraintTop_toBottomOf="@id/logoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginTop="@dimen/space_8"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="Discover, share, and plan your perfect travel adventures"
        android:textColor="@color/mdt_text_secondary"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <LinearLayout
        android:id="@+id/featuresContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_24"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            style="@style/MdtCard"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/mdt_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/mdt_primary_10">

                    <ImageView
                        android:id="@+id/imgFeatureExplore"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/earth"
                        android:contentDescription="@null"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_12"
                    android:text="Explore Destinations"
                    android:textColor="@color/mdt_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_12"/>

        <com.google.android.material.card.MaterialCardView
            style="@style/MdtCard"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/mdt_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/mdt_primary_10">

                    <ImageView
                        android:id="@+id/imgFeatureShare"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/plane"
                        android:contentDescription="@null"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_12"
                    android:text="Share Experiences"
                    android:textColor="@color/mdt_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_12"/>

        <com.google.android.material.card.MaterialCardView
            style="@style/MdtCard"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/mdt_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/space_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/mdt_primary_10">

                    <ImageView
                        android:id="@+id/imgFeaturePlan"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/shooting_star"
                        android:contentDescription="@null"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_12"
                    android:text="Plan Your Journey"
                    android:textColor="@color/mdt_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnGetStarted"
        style="@style/MdtPrimaryButton"
        android:layout_width="356dp"
        android:layout_height="90dp"
        android:layout_marginBottom="14dp"
        android:text="Get Started"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>