<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdt_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="@null"
                app:shapeAppearanceOverlay="@style/MdtImageTopRounded"/>

            <com.google.android.material.card.MaterialCardView
                style="@style/MdtCard"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/mdt_surface"
                android:layout_gravity="top|start">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_media_previous"
                    app:tint="@color/mdt_text_primary"
                    android:contentDescription="Back"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    style="@style/MdtCard"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardBackgroundColor="@color/mdt_surface"
                    android:layout_marginEnd="10dp">

                    <ImageButton
                        android:id="@+id/btnEditPost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="@color/mdt_text_primary"
                        android:contentDescription="Edit"
                        android:visibility="gone"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    style="@style/MdtCard"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardBackgroundColor="@color/mdt_surface">

                    <ImageButton
                        android:id="@+id/btnDeletePost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_menu_delete"
                        app:tint="@color/mdt_text_primary"
                        android:contentDescription="Delete"
                        android:visibility="gone"/>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            style="@style/MdtCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginTop="3dp"
            app:cardBackgroundColor="@color/mdt_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_16">

                <TextView
                    android:id="@+id/txtDetailsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/mdt_text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@null"
                        android:src="@android:drawable/ic_menu_mylocation"
                        app:tint="@color/mdt_icon_muted" />

                    <TextView
                        android:id="@+id/txtDetailsLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Location"
                        android:textColor="@color/mdt_text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@null"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="@color/mdt_primary" />

                    <TextView
                        android:id="@+id/txtDetailsRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="4.8 (234)"
                        android:textColor="@color/mdt_text_primary"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDetailsAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="by Author"
                    android:textColor="@color/mdt_text_secondary"
                    android:textSize="13sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wikiBox"
            style="@style/MdtCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginTop="6dp"
            app:cardBackgroundColor="@color/mdt_surface"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_16">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgWiki"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/MdtImageTopRounded"/>

                <TextView
                    android:id="@+id/txtWikiTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/mdt_text_primary"
                    android:layout_marginTop="12dp"
                    android:text="Wikipedia title"/>

                <TextView
                    android:id="@+id/txtWikiExtract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/mdt_text_secondary"
                    android:text="Wikipedia extract"/>

                <Button
                    android:id="@+id/btnOpenWiki"
                    style="@style/MdtPrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:text="Open Wikipedia"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txtCommentsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/mdt_text_primary"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginTop="@dimen/space_20"/>

        <com.google.android.material.card.MaterialCardView
            style="@style/MdtCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginTop="@dimen/space_12"
            app:cardBackgroundColor="@color/mdt_surface">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:padding="8dp"
                android:clipToPadding="false"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/MdtCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_24"
            app:cardBackgroundColor="@color/mdt_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_16">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="@dimen/corner_16"
                    app:boxCornerRadiusTopEnd="@dimen/corner_16"
                    app:boxCornerRadiusBottomStart="@dimen/corner_16"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_16"
                    app:boxStrokeColor="@color/mdt_stroke">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Write a comment..." />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnAddComment"
                    style="@style/MdtPrimaryButton"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/space_12"
                    android:text="Add Comment"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
